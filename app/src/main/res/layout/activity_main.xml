<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/primaryDark">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="116dp"
                android:layout_height="113dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="116dp"
                android:layout_marginTop="103dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:cropToPadding="true"
                app:srcCompat="@drawable/aliengreen_walk1" />

            <TextView
                android:id="@+id/spaced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="70dp"
                android:layout_toStartOf="@+id/dge"
                android:text="SPACE"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/dge"
                android:layout_width="99dp"
                android:layout_height="106dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-18dp"
                android:layout_marginTop="111dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/imageView3"
                android:text="DGE"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/D"
                android:layout_width="87dp"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-134dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="24dp"
                android:layout_toStartOf="@+id/dge"
                android:layout_toEndOf="@+id/imageView3"
                android:text="D"
                android:textColor="@color/white"
                android:textSize="50sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="314dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b_start_game"
                    android:background="@drawable/transparent_button"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:layout_margin="5dp"
                    android:onClick="startGameButtonClicked"
                    android:text="@string/start_game"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <Button
                    android:id="@+id/b_leaderboard"
                    android:background="@drawable/transparent_button"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="leaderboardButtonClicked"
                    android:text="@string/leaderboard"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <Button
                    android:background="@drawable/transparent_button"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:onClick="settingsButtonClicked"
                    android:text="@string/settings"

                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>